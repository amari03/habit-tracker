{{define "title"}}Edit Habit{{end}}

{{define "content"}}
<div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">Edit Habit</h2>

    <form method="POST" action="/daily/update/{{.Habit.ID}}" class="space-y-4">
        <div>
            <label for="name" class="block text-sm font-medium mb-1">Habit Name</label>
            <input type="text" id="name" name="name" required 
                   value="{{.Habit.Name}}" 
                   class="w-full border border-gray-300 rounded px-3 py-2">
        </div>

        <div class="flex items-center space-x-2">
            <input type="checkbox" id="completed" name="completed" {{if .Habit.Completed}}checked{{end}} class="form-checkbox h-5 w-5 text-indigo-600">
            <label for="completed" class="text-sm">Mark as completed</label>
        </div>

        <div class="flex justify-between">
            <a href="/daily" class="text-gray-500 hover:underline">Cancel</a>
            <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded">Save</button>
        </div>
    </form>
</div>
{{end}}
