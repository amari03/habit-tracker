{{define "title"}}Daily Habits{{end}}

{{define "content"}}
<div class="flex flex-col md:flex-row">
    <aside class="w-full md:w-1/4 mb-4 md:mb-0 md:mr-6">
        <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-lg font-semibold mb-2">Navigation</h3>
            <ul class="space-y-2">
                <li><a href="/" class="text-indigo-600 hover:underline">Home</a></li>
                <li><a href="/weekly" class="text-indigo-600 hover:underline">Weekly</a></li>
            </ul>
        </div>
    </aside>

    <section class="flex-1">
        <h2 class="text-2xl font-bold mb-4">Daily Habits to Complete</h2>
        
        {{template "progress_bar" .}}

        <!-- Updated Habit Creation Form -->
        <form hx-post="/habits/create" 
              hx-target="#habits-list" 
              hx-swap="beforeend"
              class="bg-white p-4 rounded-lg shadow mb-6 space-y-4">
            
            <!-- Hidden Frequency Field -->
            <input type="hidden" name="frequency" value="daily">
            
            <!-- Title -->
            <div>
                <label for="title" class="block font-medium mb-1">Habit Title*</label>
                <input type="text" id="title" name="title" required 
                       class="w-full border border-gray-300 rounded px-3 py-2"
                       placeholder="e.g., Morning Run">
            </div>
            
            <!-- Description -->
            <div>
                <label for="description" class="block font-medium mb-1">Description</label>
                <textarea id="description" name="description"
                          class="w-full border border-gray-300 rounded px-3 py-2 h-20"
                          placeholder="Optional details about this habit"></textarea>
            </div>
            
            <!-- Goal -->
            <div>
                <label for="goal" class="block font-medium mb-1">Goal</label>
                <input type="text" id="goal" name="goal"
                       class="w-full border border-gray-300 rounded px-3 py-2"
                       placeholder="e.g., 30 minutes daily">
            </div>
            
            <div class="flex justify-end">
                <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white px-6 py-2 rounded">
                    Create Habit
                </button>
            </div>
        </form>

        <!-- Habit List with Tracking -->
        <div id="habits-list">
            {{range .Habits}}
            <div class="bg-white p-4 rounded-lg shadow mb-4" id="habit-{{.ID}}">
                <div class="flex justify-between items-start">
                    <div class="flex-1">
                        <h3 class="font-semibold text-lg">{{.Title}}</h3>
                        {{if .Description}}<p class="text-gray-600 mt-1">{{.Description}}</p>{{end}}
                        {{if .Goal}}<p class="text-sm text-indigo-600 mt-1">Goal: {{.Goal}}</p>{{end}}
                    </div>
                    <div class="flex space-x-2 ml-4">
                        <a href="/habits/edit/{{.ID}}" class="text-blue-500 hover:underline">Edit</a>
                        <button hx-delete="/habits/delete/{{.ID}}"
                                hx-target="#habit-{{.ID}}"
                                hx-swap="outerHTML"
                                class="text-red-500 hover:underline">Delete</button>
                    </div>
                </div>
                
                <!-- Daily Check-in -->
                <div class="mt-4 pt-4 border-t">
                    {{template "daily_checkin" .}}
                </div>
            </div>
            {{else}}
            <p class="text-gray-600">No daily habits yet. Create your first habit above!</p>
            {{end}}
        </div>
    </section>
</div>
{{end}}

<!-- Daily Check-in Partial -->
{{define "daily_checkin"}}
<div hx-get="/habits/{{.ID}}/checkin" hx-trigger="load">
    <!-- HTMX will load check-in status here -->
    <div class="flex items-center space-x-4">
        <span class="text-sm text-gray-500">Today:</span>
        <button hx-post="/habits/{{.ID}}/entries" 
                hx-vars='{"status":"completed"}' 
                class="px-3 py-1 text-sm rounded bg-green-100 text-green-800 hover:bg-green-200">
            ✅ Done
        </button>
        <button hx-post="/habits/{{.ID}}/entries" 
                hx-vars='{"status":"skipped"}' 
                class="px-3 py-1 text-sm rounded bg-yellow-100 text-yellow-800 hover:bg-yellow-200">
            ⏸ Skip
        </button>
    </div>
</div>
{{end}}