{{define "title"}}Daily Habits{{end}}

{{define "content"}}

    <section class="main-content">
        <h2 class="page-title">Daily Habits to Complete</h2>
        
        {{template "progress_bar" .}}

        <!-- Updated Habit Creation Form -->
        <form hx-post="/habits/create" 
              hx-target="#habits-list" 
              hx-swap="beforeend"
              class="form-container">
            
            <!-- Hidden Frequency Field -->
            <input type="hidden" name="frequency" value="daily">
            
            <!-- Title -->
            <div class="form-group">
                <label for="title" class="form-label">Habit Title*</label>
                <input type="text" id="title" name="title" required 
                       class="form-input"
                       placeholder="e.g., Morning Run">
            </div>
            
            <!-- Description -->
            <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description"
                          class="form-textarea"
                          placeholder="Optional details about this habit"></textarea>
            </div>
            
            <!-- Goal -->
            <div class="form-group">
                <label for="goal" class="form-label">Goal</label>
                <input type="text" id="goal" name="goal"
                       class="form-input"
                       placeholder="e.g., 30 minutes daily">
            </div>
            
            <div class="form-button-container">
                <button type="submit" class="submit-button">
                    Create Habit
                </button>
            </div>
        </form>

        <!-- Habit List with Tracking -->
        <div id="habits-list">
            {{range .Habits}}
            <div class="habit-card" id="habit-{{.ID}}">
                <div class="habit-header">
                    <div class="habit-content">
                        <h3 class="habit-title">{{.Title}}</h3>
                        {{if .Description}}<p class="habit-description">{{.Description}}</p>{{end}}
                        {{if .Goal}}<p class="habit-goal">Goal: {{.Goal}}</p>{{end}}
                    </div>
                    <div class="habit-actions">
                        <a href="/habits/edit/{{.ID}}" class="edit-link">Edit</a>
                        <button hx-delete="/habits/delete/{{.ID}}"
                                hx-target="#habit-{{.ID}}"
                                hx-swap="outerHTML"
                                class="delete-button">Delete</button>
                    </div>
                </div>
                
                <!-- Daily Check-in -->
                <div class="check-in-container">
                    {{template "daily_checkin" .}}
                </div>
            </div>
            {{else}}
            <p class="empty-message">No daily habits yet. Create your first habit above!</p>
            {{end}}
        </div>
    </section>
</div>
{{end}}

<!-- Daily Check-in Partial -->
{{define "daily_checkin"}}
<div hx-get="/habits/{{.ID}}/checkin" hx-trigger="load">
    <!-- HTMX will load check-in status here -->
    <div class="check-in-group">
        <span class="check-in-label">Today:</span>
        <button hx-post="/habits/{{.ID}}/entries" 
                hx-vars='{"status":"completed"}' 
                class="done-button">
            ✅ Done
        </button>
        <button hx-post="/habits/{{.ID}}/entries" 
                hx-vars='{"status":"skipped"}' 
                class="skip-button">
            ⏸ Skip
        </button>
    </div>
</div>
{{end}}