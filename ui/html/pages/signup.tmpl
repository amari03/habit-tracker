{{define "title"}}Sign Up{{end}}

{{define "content"}}
<div class="signup-container" style="max-width: 28rem; margin: 2rem auto;"> <!-- Simple container -->
    <h2 class="page-title" style="text-align: center; margin-bottom: 1.5rem;">Create Your Account</h2>

    <!-- This div matches the hx-target in your signup_form.tmpl partial -->
    <div id="signup-form-container">
        {{/* Render the signup form partial, passing the current data context */}}
        {{template "signup_form" .}}
    </div>
</div>
{{end}}